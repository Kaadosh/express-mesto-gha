{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"]}],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "camelcase": [
      "error",
      { "properties": "never", "ignoreDestructuring": true, "allow": ["_id"] }
    ]
  }
}
